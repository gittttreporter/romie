{
  "compilerOptions": {
    "noEmit": true,              // ðŸ‘ˆ Don't emit anything â€” Vite handles builds
    "allowJs": true,             // âœ… Allow .js files
    "checkJs": false,            // ðŸŸ¡ Don't type check .js files (optional, but safer)
    "jsx": "preserve",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@main/*": ["src/main/*"],
      "@/*": ["src/*"]
    },
    "types": ["vite/client"],

  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",         // âœ… Include .js
    "src/**/*.d.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
